{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "paths": {
        ".": ["src/*"],
        "@screens/*": ["screens/*"],
        "@components/*": ["components/*"],
        "@navigation/*": ["navigation/*"],
        "@store/*": ["store/*"],
        "@utils/*": ["utils/*"],
    },
    "noImplicitAny": false,
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}